{
  "name": "nestjs-graphql-sample",
  "version": "2.0.0",
  "description": "A demo project, originally a programming challenge for a fantastic job!",
  "author": "Seb Ringrose <sebringrose@gmail.com>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "pnpm prisma:migrate-dev && pnpm env-cmd -f .env.local -- nest start --watch",
    "start:debug": "pnpm prisma:migrate-dev && pnpm env-cmd -f .env.local -- nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "prisma:generate": "prisma generate --schema ./src/modules/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate deploy --schema ./src/modules/prisma/schema.prisma",
    "prisma:migrate-dev": "pnpm env-cmd -f .env.local -- prisma migrate dev --schema ./src/modules/prisma/schema.prisma --name nestjs-graphql-sample",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "gql:generate": "pnpm gqlg --schemaFilePath ./src/generated/schema.graphql --destDirPath ./src/generated/gql --depthLimit 5",
    "test": "pnpm env-cmd -f .env.local -- jest -i",
    "test:watch": "pnpm env-cmd -f .env.local -- jest --watch",
    "test:cov": "pnpm env-cmd -f .env.local -- jest --coverage",
    "test:debug": "pnpm env-cmd -f .env.local -- node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "pnpm prisma:migrate-dev && pnpm gql:generate && env-cmd -f .env.local -- jest --config ./src/testing/jest-e2e.json",
    "test:ci": "jest -i",
    "test:ci-e2e": "pnpm gql:generate && jest --config ./src/testing/jest-e2e.json"
  },
  "dependencies": {
    "@apollo/server": "^4.9.3",
    "@as-integrations/fastify": "^2.1.0",
    "@fastify/static": "^6.11.2",
    "@mercuriusjs/gateway": "^2.2.0",
    "@nestjs/apollo": "^12.0.9",
    "@nestjs/common": "^10.2.7",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.2.7",
    "@nestjs/graphql": "^12.0.9",
    "@nestjs/jwt": "^10.1.1",
    "@nestjs/mercurius": "^12.0.11",
    "@nestjs/platform-fastify": "^10.2.5",
    "@nestjs/swagger": "^7.1.11",
    "@nestjs/throttler": "^5.0.0",
    "@prisma/client": "^5.3.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "global": "^4.4.0",
    "graphql": "^16.8.0",
    "jest-mock-extended": "^3.0.5",
    "nestjs-rate-limiter": "^3.1.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@golevelup/ts-jest": "^0.4.0",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/introspection": "^4.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-graphql-request": "^6.1.0",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/node-fetch": "^2.6.10",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "gql-generator": "^1.0.19",
    "graphql-request": "^6.1.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "prisma": "^5.3.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/dist/**",
      "!**/test/**",
      "!**/main.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
